<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <TextView
        android:text="@string/username"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_login_margin_top_bottom"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:layout_height="wrap_content"

        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:layout_marginRight="@dimen/activity_login_margin_left_right"
        android:layout_marginTop="@dimen/activity_login_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_login_margin_top_bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:text="@string/password"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:layout_marginRight="@dimen/activity_login_margin_left_right"
        android:layout_marginTop="@dimen/activity_login_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_login_margin_top_bottom"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:layout_marginRight="@dimen/activity_login_margin_left_right"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:background="@color/DodgerBlue"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_margin_left_right"
        android:layout_marginRight="@dimen/activity_login_margin_left_right"

        android:layout_marginTop="@dimen/activity_login_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_login_margin_top_bottom"
        android:background="@color/light_blue"
        android:text="@string/register"
        />


</LinearLayout>