<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">
            <TextView
                style="@style/CustomTextView"
                android:layout_marginTop="@dimen/activity_register_margin_top_bottom"
                android:layout_marginBottom="@dimen/activity_register_margin_top_bottom"
                android:text="@string/telephone_number" />
            <com.mooreliu.view.ClearableEditText
                android:id="@+id/input_telephone_number"
                android:hint="@string/please_input_username"
                style="@style/RegisterEditText"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                style="@style/CustomTextView"
                android:layout_marginTop="@dimen/activity_register_margin_top_bottom"
                android:layout_marginBottom="@dimen/activity_register_margin_top_bottom"
                android:text="@string/input_password" />
            <com.mooreliu.view.ClearableEditText
                style="@style/RegisterEditText"
                android:hint="@string/please_input_password"
                android:password="true"
                android:maxLength="10"
                android:digits="qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM1234567890"
                android:id="@+id/input_password"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                style="@style/CustomTextView"
                android:layout_marginTop="@dimen/activity_register_margin_top_bottom"
                android:layout_marginBottom="@dimen/activity_register_margin_top_bottom"
                android:text="@string/comfirm_password" />
            <com.mooreliu.view.ClearableEditText
                style="@style/RegisterEditText"
                android:hint="@string/please_input_confirm_password"
                android:password="true"
                android:maxLength="10"
                android:digits="@string/login_only_can_input"
                android:id="@+id/input_comfirm_password"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                style="@style/CustomTextView"
                android:layout_marginTop="@dimen/activity_register_margin_top_bottom"
                android:layout_marginBottom="@dimen/activity_register_margin_top_bottom"
                android:text="@string/register_number" />
            <com.mooreliu.view.ClearableEditText
                style="@style/RegisterEditText"
                android:hint="@string/please_input_register_number"
                android:maxLength="6"
                android:numeric="integer"
                android:id="@+id/input_register_number"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_do_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_login_margin_left_right"
            android:layout_marginRight="@dimen/activity_login_margin_left_right"
            android:layout_marginTop="5dp"
            android:text="@string/register"
            android:background="@color/DodgerBlue"
            />
        <TextView
            android:id="@+id/register_error_message"
            android:textColor="@android:color/holo_red_dark"
            style="@style/CustomTextView" />
        <Button
            android:id="@+id/btn_do_send_register_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_login_margin_left_right"
            android:layout_marginRight="@dimen/activity_login_margin_left_right"
            android:layout_marginTop="@dimen/activity_login_margin_top_bottom"
            android:layout_marginBottom="@dimen/activity_login_margin_top_bottom"
            android:background="@drawable/drawable_reload"
            android:text="@string/get_register_number"
            />
        <TextView
            android:id="@+id/sms_error_message"
            android:textColor="@android:color/holo_red_dark"
            style="@style/CustomTextView" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</LinearLayout>