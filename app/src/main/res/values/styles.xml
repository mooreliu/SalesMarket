<resources>
    <!-- Base application theme. -->

    <!--<item name="android:windowContentTransitions">true</item>-->
    <!--<item name="android:windowEnterTransition">@transition/transitoin_explode</item>-->
    <!--<item name="android:windowExitTransition">@transition/transitoin_explode</item>-->
    <!--<item name="android:windowReenterTransition">@transition/transitoin_explode</item>-->
    <!--<item name="android:windowReturnTransition">@transition/transitoin_explode</item>-->

    <!-- TAB style-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--EXIT DIALOG-->

    <style name="ExitDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- CustomEditText -->
    <!--<item name="android:textSize">12sp</item>-->
    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/login_register_edittext_text_size</item>
        <item name="android:maxLength">15</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegisterEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/login_register_edittext_text_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- custom edittext-->
    <!--<item name="android:textSize">14sp</item>-->
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_margin_left_right</item>
        <item name="android:textSize">@dimen/login_register_textview_text_size</item>

    </style>

    <!-- CustomDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- CustomProgressDialog -->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
