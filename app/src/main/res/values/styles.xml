<resources>
    <!-- Base application theme. -->

    <!-- TAB style-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--EXIT DIALOG-->

    <style name="ExitDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomEditText"  parent="android:Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/activity_login_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/activity_login_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/activity_login_margin_top_bottom</item>
    </style>

    <style name="RegisterEditText"  parent="android:Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/activity_register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/activity_register_margin_right</item>
        <item name="android:layout_marginTop">@dimen/activity_register_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/activity_register_margin_top_bottom</item>
    </style>
    <!-- custom edittext-->
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_margin_left_right</item>

    </style>
</resources>
